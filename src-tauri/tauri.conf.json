{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "butterfly",
  "version": "0.1.0",
  "identifier": "com.butterfly",
  "build": {
    "frontendDist": "../build",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "Butterfly",
        "resizable": false,
        "browserExtensionsEnabled": false,
        "devtools": false,
        "dragDropEnabled": false,
        "incognito": true,
        "maximizable": false,
        "maximized": true,
        "zoomHotkeysEnabled": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
